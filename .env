# ============================================================================
# RoboCup UR5e 环境变量配置
# ============================================================================

# ROS Master URI（指向 VirtualBox VM 中的 arm_gazebo）
# 根据实际 VM IP 地址修改
export ROS_MASTER_URI=http://192.168.56.101:11311

# 本机 IP 地址（自动检测）
export ROS_IP=$(hostname -I | awk '{print $1}')

# 或手动指定（如果自动检测失败）
# export ROS_IP=192.168.56.1

# GPU 设置（针对 NVIDIA RTX 5070 Ti）
export NVIDIA_VISIBLE_DEVICES=all
export NVIDIA_DRIVER_CAPABILITIES=compute,utility

# Docker Compose 项目名称
export COMPOSE_PROJECT_NAME=robocup_ur5e

# 显示服务器（用于 GUI）
export DISPLAY=${DISPLAY:-:0}

# 日志级别
export ROSCONSOLE_FORMAT='[${severity}] [${time}] [${node}]: ${message}'

echo "========================================"
echo "RoboCup UR5e 环境配置已加载"
echo "========================================"
echo "ROS_MASTER_URI: ${ROS_MASTER_URI}"
echo "ROS_IP: ${ROS_IP}"
echo "========================================"
